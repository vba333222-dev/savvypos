{
  "_meta": {
    "name": "Savvy POS Design System",
    "version": "2.0.0",
    "description": "Enterprise mPOS tokens with Antigravity physics and Stitch elevation."
  },
  "color": {
    "brand": {
      "primary": {
        "light": "#5B8DEF",
        "dark": "#7AA2FF"
      },
      "secondary": {
        "light": "#4CC9B0",
        "dark": "#5EDBC7"
      },
      "accent": {
        "light": "#F4B860",
        "dark": "#F6C177"
      }
    },
    "background": {
      "primary": {
        "light": "#F7F9FC",
        "dark": "#0F172A",
        "description": "Main app background (Scaffold)"
      },
      "secondary": {
        "light": "#FFFFFF",
        "dark": "#1E293B",
        "description": "Sidebar or secondary surfaces"
      },
      "elevated": {
        "light": "#FFFFFF",
        "dark": "#273449",
        "description": "Cards, Dialogs, Bottom Sheets"
      },
      "overlay": {
        "light": "#0F172A1A",
        "dark": "#00000080",
        "description": "Modal barrier color"
      }
    },
    "text": {
      "primary": {
        "light": "#0F172A",
        "dark": "#E5E7EB"
      },
      "secondary": {
        "light": "#475569",
        "dark": "#94A3B8"
      },
      "muted": {
        "light": "#94A3B8",
        "dark": "#64748B"
      },
      "inverse": {
        "light": "#FFFFFF",
        "dark": "#0F172A"
      }
    },
    "border": {
      "default": {
        "light": "#E2E8F0",
        "dark": "#334155"
      },
      "focus": {
        "light": "#5B8DEF",
        "dark": "#7AA2FF"
      }
    },
    "state": {
      "success": {
        "light": "#4ADE80",
        "dark": "#22C55E"
      },
      "warning": {
        "light": "#FACC15",
        "dark": "#EAB308"
      },
      "error": {
        "light": "#F87171",
        "dark": "#EF4444"
      },
      "info": {
        "light": "#60A5FA",
        "dark": "#3B82F6"
      }
    }
  },
  "shape": {
    "radius": {
      "sm": 4.0,
      "md": 8.0,
      "lg": 16.0,
      "xl": 24.0,
      "pill": 999.0
    },
    "spacing": {
      "xs": 4.0,
      "sm": 8.0,
      "md": 16.0,
      "lg": 24.0,
      "xl": 32.0,
      "xxl": 48.0
    }
  },
  "motion": {
    "duration": {
      "fast": 200,
      "medium": 400,
      "slow": 600
    },
    "curve": {
      "default": [
        0.4,
        0.0,
        0.2,
        1.0
      ],
      "bounce": [
        0.34,
        1.56,
        0.64,
        1.0
      ],
      "fluid": [
        0.25,
        0.46,
        0.45,
        0.94
      ]
    },
    "description": "Cubic bezier control points [x1, y1, x2, y2]. 'Bounce' has y > 1.0 to create the overshoot effect."
  },
  "elevation": {
    "none": {
      "offset": {
        "x": 0,
        "y": 0
      },
      "blur": 0,
      "spread": 0,
      "opacity": {
        "light": 0.0,
        "dark": 0.0
      }
    },
    "sm": {
      "offset": {
        "x": 0,
        "y": 1
      },
      "blur": 2,
      "spread": 0,
      "opacity": {
        "light": 0.05,
        "dark": 0.25
      }
    },
    "md": {
      "offset": {
        "x": 0,
        "y": 4
      },
      "blur": 6,
      "spread": -1,
      "opacity": {
        "light": 0.1,
        "dark": 0.4
      }
    },
    "lg": {
      "offset": {
        "x": 0,
        "y": 10
      },
      "blur": 15,
      "spread": -3,
      "opacity": {
        "light": 0.1,
        "dark": 0.5
      }
    },
    "floating": {
      "description": "The signature Antigravity/Stitch shadow for active elements",
      "offset": {
        "x": 0,
        "y": 20
      },
      "blur": 25,
      "spread": -5,
      "opacity": {
        "light": 0.15,
        "dark": 0.6
      }
    }
  }
}